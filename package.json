{
  "name": "papstation-browser",
  "version": "1.0.0",
  "description": "访问互联网",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "set NODE_ENV=development && electron .",
    "build": "electron-builder --win --x64",
    "build:dir": "electron-builder --win --x64 --dir",
    "dist": "electron-builder --win --x64 --publish never",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.papstation.browser",
    "productName": "Papstation",
    "copyright": "Copyright © 2026 Ruanm",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.git",
      "!*.md",
      "!LICENSE",
      "!dist"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "artifactName": "${productName}_Win64_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Papstation"
    },
    "asar": true,
    "compression": "maximum"
  },
  "keywords": [
    "browser",
    "electron",
    "chromium",
    "papstation"
  ],
  "author": "RuanMingze",
  "license": "MIT",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^25.1.8"
  }
}